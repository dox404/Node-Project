    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="leftside">
                    <h1 class="text-center">General Information</h1>
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
